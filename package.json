{
  "name": "budget-bonsai-server",
  "version": "1.0.0",
  "description": "Server for BudgetBonsai app",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/start.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vucben99/budget-bonsai-server.git"
  },
  "author": "Beni Vucsics",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vucben99/budget-bonsai-server/issues"
  },
  "homepage": "https://github.com/vucben99/budget-bonsai-server#readme",
  "dependencies": {
    "axios": "^1.3.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[j]s?(x)", "**/?(*.)+(spec|test).ts?(x)" 
    ],
    "verbose": true
  }
}
