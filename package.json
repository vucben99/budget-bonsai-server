{
  "name": "budget-bonsai-server",
  "version": "1.0.0",
  "description": "Server for BudgetBonsai app",
  "main": "start.js",
  "scripts": {
    "test": "jest",
    "build": "npx tsc",
    "start": "node dist/start.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/start.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vucben99/budget-bonsai-server.git"
  },
  "author": "Beni Vucsics",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vucben99/budget-bonsai-server/issues"
  },
  "homepage": "https://github.com/vucben99/budget-bonsai-server#readme",
  "dependencies": {
    "axios": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[j]s?(x)", "**/?(*.)+(spec|test).ts?(x)" 
    ],
    "verbose": true
  }
}
